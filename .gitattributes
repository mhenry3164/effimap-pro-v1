# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Force batch scripts to use CRLF
*.{cmd,[cC][mM][dD]} text eol=crlf
*.{bat,[bB][aA][tT]} text eol=crlf

# Force bash scripts to use LF
*.sh text eol=lf

# Source code
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf

# Documentation
*.txt text eol=lf
*.pdf binary
*.doc binary
*.docx binary

# Graphics
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.svg text eol=lf

# Font files
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary

# Specific files
.env.* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
